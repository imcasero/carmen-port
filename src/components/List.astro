---
// Importa las interfaces
import type { IExperience, IEducation } from "../data";

interface List {
  data: (IExperience | IEducation)[];
  title: string;
}

const { data, title } = Astro.props;
---

<div class="w-2/3 mx-auto my-10">
  <h2 class="text-2xl font-bold mb-5">{title}</h2>
  <ul class="mt-2 flex flex-col">
    {
      data.map((item: IExperience | IEducation, index: number) => (
        <li class="w-full">
          <h3 class="text-xl">{item.title}</h3>
          <hr class="w-1/2 my-2" />
          <p class="mb-2">
            {item.from} {item.to && ` - ${item.to}`}
          </p>

          <p class="w-1/2 text-gray-400">{item.description}</p>
          {/* Puedes agregar renderizado espec√≠fico para propiedades adicionales de cada interfaz */}
        </li>
      ))
    }
  </ul>
</div>
